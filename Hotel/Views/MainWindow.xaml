<Window x:Class="Hotel.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Hotel.Views"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/Images/mainbackground.jpg"></ImageBrush>
        </Grid.Background>
        <Button Content="Look for a room" FontSize="14" HorizontalAlignment="Left" Margin="50,319,0,0" VerticalAlignment="Top" Height="62" Width="160" Click="Search_Click"/>
        <Button Content="Connect to account" FontSize="14" HorizontalAlignment="Left" Margin="265,319,0,0" VerticalAlignment="Top" Height="62" Width="160" Click="Button_Click"/>
        <Label Content="Welcome!" FontSize="40" FontFamily="Harrington" HorizontalContentAlignment="Center" HorizontalAlignment="Left" Margin="130,121,0,0" VerticalAlignment="Top" Height="68" Width="215"/>
    </Grid>
</Window>
